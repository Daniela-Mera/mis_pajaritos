<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :mother %><br />
    <%= f.text_field :mother, autofocus: true, autocomplete: "mother" %>
  </div>

  <div class="field">
    <%= f.label :father %><br />
    <%= f.text_field :father, autofocus: true, autocomplete: "father" %>
  </div>

  <div class="field">
    <%= f.label :celphone %><br />
    <%= f.text_field :celphone, autofocus: true, autocomplete: "celphone" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :ad_number %><br />
    <%= f.text_field :ad_number, autofocus: true, autocomplete: "ad_number" %>
  </div>

  <div class="field">
    <%= f.label :ad_comuna %><br />
    <%= f.text_field :ad_comuna, autofocus: true, autocomplete: "ad_comuna" %>
  </div>

  <div class="field">
    <%= f.label :ad_city %><br />
    <%= f.text_field :ad_city, autofocus: true, autocomplete: "ad_city" %>
  </div>

  <div class="field">
    <%= f.label :ad_country %><br />
    <%= f.text_field :ad_country, autofocus: true, autocomplete: "ad_country" %>
  </div>

 <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
